<UserControl x:Class="P2PClient.ChatMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:P2PClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border x:Name="Border_Background" Background="Bisque" CornerRadius="15 15 15 15" Margin="10,12,10,27" MaxWidth="200">
            <TextBlock x:Name="TextBlock_Message"   Margin="15" TextWrapping="Wrap" Foreground="Black"/>
        </Border>
        <TextBlock x:Name="TextBlock_Time" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="15" Margin="0,0,14,0"/>
    </Grid>
</UserControl>
